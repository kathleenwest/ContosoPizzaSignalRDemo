@page
@using Models;
@model PizzaOrder

@code{
    public string ApiResponse { get; set; }

    public async Task OnPostAsync()
    {
        var dataToSend = Request.Form["DataToSend"];
        using var httpClient = new HttpClient();
        var response = await httpClient.PostAsync("YourExternalApiEndpoint", new StringContent(dataToSend));
        ApiResponse = await response.Content.ReadAsStringAsync();
    }
}

<form method="post">
    <input type="text" name="DataToSend" />
    <input type="submit" value="Submit" />
</form>

@if (Model.ApiResponse != null)
{
    <textarea>@Model.ApiResponse</textarea>
}
